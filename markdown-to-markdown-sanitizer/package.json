{
  "name": "markdown-to-markdown-sanitizer",
  "version": "1.0.0",
  "description": "A robust markdown sanitizer that filters hrefs and srcs against a prefix allow-list",
  "type": "module",
  "main": "dist/index.js",
  "types": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:tests": "eslint tests --ext .ts",
    "check-types": "tsc --noEmit",
    "check-types:tests": "tsc --noEmit -p tsconfig.test.json",
    "check-types:all": "npm run check-types && npm run check-types:tests"
  },
  "keywords": [
    "markdown",
    "sanitizer",
    "security",
    "href",
    "src"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.0.0",
    "@types/turndown": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/ui": "^3.2.4",
    "ai": "^4.3.19",
    "commonmark": "^0.31.2",
    "eslint": "^8.0.0",
    "markdown-it": "^14.1.0",
    "marked": "^16.1.1",
    "showdown": "^2.1.0",
    "typescript": "^5.0.0",
    "unist-util-inspect": "^8.1.0",
    "vitest": "^3.2.3"
  },
  "dependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/mdast": "^4.0.4",
    "dompurify": "^3.1.7",
    "jsdom": "^25.0.1",
    "rehype-raw": "^7.0.0",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "remark-stringify": "^11.0.0",
    "turndown": "^7.2.0",
    "turndown-plugin-gfm": "^1.0.2",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0"
  },
  "peerDependencies": {
    "ai": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "ai": {
      "optional": true
    }
  }
}
